{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "paths": {
      "@grapevine/*": ["node_modules/grapevine/export/*"],
      "@gs-testing/*": ["node_modules/gs-testing/export/*"],
      "@gs-tools/*": ["node_modules/gs-tools/export/*"],
      "@gs-types": ["node_modules/gs-types/export/index.ts"],
      "@mask": ["node_modules/mask/export/index.ts"],
      "@moirai": ["node_modules/moirai/export/index.ts"],
      "@nabu/*": ["node_modules/nabu/export/*"],
      "@persona/*": ["node_modules/persona/export/*"],
      "@santa": ["node_modules/santa/export/index.ts"],
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/mask/typings/*.d.ts",
    "typings/*.d.ts"
  ]
}
